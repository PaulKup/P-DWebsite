{
  "name": "pd-web-dev",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:client dev:server",
    "dev:client": "npm --prefix client run dev",
    "dev:server": "npm --prefix server run dev",
    "build": "npm-run-all build:client build:server",
    "build:client": "npm --prefix client run build",
    "build:server": "npm --prefix server run build",
    "lint": "npm-run-all lint:client lint:server",
    "lint:client": "npm --prefix client run lint",
    "lint:server": "npm --prefix server run lint"
  },
  "devDependencies": {
    "eslint": "^9.33.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "task-master-ai": "^0.24.0"
  },
  "dependencies": {
    "next": "^15.4.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
